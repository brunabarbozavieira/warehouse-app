<h1> Modelos de Produtos </h1>

<%= link_to 'Cadastrar Novo', new_product_model_url %>

<% if @product_models.any? %>
 <% @product_models.each do |pm| %>
   <div>
     <h2> <%= pm.name %> </h2>
     <dl>
     <dt> <strong> <%= ProductModel.human_attribute_name(:sku)%>: </strong> </dt>
     <dd> <%= pm.sku %> </dd>
     <dt> <strong> <%= ProductModel.human_attribute_name(:supplier_id)%>: </strong> </dt>
     <dd> <%= pm.supplier.brand_name %> </dd>
     </dl>
   </div>
  <% end %>
<% else %>
  <p> Nenhum modelo de produto cadastrado. </p>
<% end %>